<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_popup_select_consonant"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="7dp"
        android:layout_gravity="center"
        android:layout_margin="30dp">

        <LinearLayout
            android:id="@+id/btnSelect1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_button_select_consonant"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/kanit_thin"
                android:text="พยัญชนะไทย"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold" />
            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_action_cons"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnSelect2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_button_select_consonant"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/kanit_thin"
                android:text="วรรณยุกต์"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold" />
            <ImageView
                android:layout_marginLeft="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_thai_tone"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnSelect3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_button_select_consonant"
            android:layout_gravity="center"
            android:gravity="center"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/kanit_thin"
                android:text="สระ"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold" />
            <ImageView
                android:layout_marginLeft="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_action_vowels"/>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>