<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_gravity="center"
    android:background="@drawable/bg_popup_video"
    >
    <TextView
        android:id="@+id/textclose"
        android:layout_margin="10dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="X"
        android:textColor="#000000"
        android:layout_gravity="end"
        android:gravity="center"
        android:background="@drawable/cerclebg"
        android:textStyle="bold"/>

    <VideoView
        android:layout_margin="10dp"
        android:id="@+id/videoPopup"
        android:layout_width="match_parent"
        android:layout_height="180dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        >


        <Button
            android:id="@+id/audio1"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ฟังเสียง"
            android:padding="10dp"
            android:background="@drawable/bg_button_function_popup_video"
            android:elevation="10dp"
            />
        <Button
            android:id="@+id/video1"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="เล่นวีดีโออีกครั้ง"
            android:padding="10dp"
            android:background="@drawable/bg_button_function_popup_video"
            android:elevation="10dp"
            />
        <Button
            android:layout_gravity="center"
            android:id="@+id/loop1"
            android:layout_margin="10dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/ic_loop_black_24dp"
            />
    </LinearLayout>
</LinearLayout>