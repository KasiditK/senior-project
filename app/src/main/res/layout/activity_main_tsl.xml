<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityMainTSL"
    android:id="@+id/drawerLayout"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="30dp"
            android:padding="5dp"
            android:text=" พจนานุกรมวีดีโอภาษามือไทย"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/inputSentence"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="กรุณาใส่ข้อความภาษาไทย"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="15dp"
            />




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnTran"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"

                android:layout_weight="1"
                android:background="@drawable/btn"
                android:text="แสดงวีดีโอ"
                android:textAllCaps="false"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/btnClear"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/btn"
                android:text="ล้าง"
                android:textAllCaps="false"
                android:textColor="#ffffff" />
        </LinearLayout>




        <VideoView
            android:id="@+id/showVideo"
            android:layout_width="match_parent"
            android:layout_height="282dp"
            android:layout_marginTop="20dp" />
        <TextView
            android:id="@+id/sh_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="30dp"
            android:padding="5dp"
            android:gravity="center"
            android:text=" พจนานุกรมวีดีโอภาษามือไทย"
            android:textSize="15sp" />

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_menu"
        app:headerLayout="@layout/navigation_header"
        android:layout_gravity="start"
        android:id="@+id/navLeft"
        >

        <ProgressBar
            android:id="@+id/progressBarOne"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="189dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:progressTint="@color/colorPrimaryDark" />
        <ProgressBar
            android:id="@+id/progressBarTwo"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="240dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:progressTint="@color/colorPrimaryDark" />
        <ProgressBar
            android:id="@+id/progressBarThree"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="285dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:progressTint="@color/colorPrimaryDark" />
        <ProgressBar
            android:id="@+id/progressBarFour"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="330dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:progressTint="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/buttonOne"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/ic_action_download"
            android:layout_marginTop="155dp"
            android:layout_marginLeft="245dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="" />

        <Button
            android:id="@+id/buttonTwoDownload"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/ic_action_download"
            android:layout_marginTop="208dp"
            android:layout_marginLeft="245dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="" />

        <Button
            android:id="@+id/buttonThree"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/ic_action_download"
            android:layout_marginTop="253dp"
            android:layout_marginLeft="245dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="" />



        <Button
            android:id="@+id/buttonFour"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/ic_action_download"
            android:layout_marginTop="298dp"
            android:layout_marginLeft="245dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:text="" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progressBarOne"
            android:orientation="horizontal"
            android:layout_marginTop="350dp">

            <TextView
                android:id="@+id/textViewProgressOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"

                android:textAlignment="center"
                android:textColor="@android:color/background_light" />

            <TextView
                android:id="@+id/textshow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"

                android:textAlignment="center"
                android:textColor="@android:color/background_light" />

            <Button
                android:id="@+id/buttonCancelOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:enabled="false" />


        </LinearLayout>


    </android.support.design.widget.NavigationView>

    <android.support.design.widget.NavigationView
        android:id="@+id/navRight"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/navigation_header_right"
        android:layout_gravity="end"
        >
        <ListView
            android:id="@+id/favorite"
            android:layout_marginTop="140dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>


    </android.support.design.widget.NavigationView>



</android.support.v4.widget.DrawerLayout>